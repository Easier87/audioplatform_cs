<Page x:Class="audioplatform_cs.View.MostMain"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:audioplatform_cs.View"
      mc:Ignorable="d" 
      d:DesignHeight="540" d:DesignWidth="660"
      Title="MostMain">

    <Border Background="#1b1b1b">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="35*"/>
                <ColumnDefinition Width="31*"/>
            </Grid.ColumnDefinitions>

            <StackPanel VerticalAlignment="Center" Height="400">
                <Button Height="100" Width="300"/>
                <Button Height="100" Width="300"/>
                <Button Height="100" Width="300"/>
                <Button Height="100" Width="300"/>
            </StackPanel>
        </Grid>
    </Border>
</Page>
