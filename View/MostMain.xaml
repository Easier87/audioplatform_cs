<Page x:Class="audioplatform_cs.View.MostMain"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:audioplatform_cs.View"
      mc:Ignorable="d" 
      d:DesignHeight="480" d:DesignWidth="660"
      Title="MostMain">

    <Border Background="#1b1b1b">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="35*"/>
                <ColumnDefinition Width="31*"/>
            </Grid.ColumnDefinitions>

            <Border BorderBrush="Black" BorderThickness="1">
                <StackPanel VerticalAlignment="Center" Height="400">
                    <Button Content="Рок" Height="100" Width="300" />
                    <Button Content="Хип-Поп" Height="100" Width="300"/>
                    <Button Content="Альтернатива" Height="100" Width="300"/>
                    <Button Content="Классика" Height="100" Width="300"/>
                </StackPanel>
            </Border>

            <Border Grid.Column="1" Background="#292929" BorderBrush="Black" BorderThickness="1">
                
            </Border>
        </Grid>
    </Border>
</Page>
